---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const servicios = [
  {
    titulo: "TRASLADOS",
    subtitulo: "Nos encargamos de la conducción.",
    descripcion: "Traslado de unidades conducidas por nuestros operadores desde el punto de origen hasta el destino indicado por el cliente.",
    imagen: "/images/servicio-traslado.png",
    beneficios: [
      "Operadores capacitados y con experiencia",
      "Seguimiento en tiempo real",
      "Disponibilidad 24/7",
      "Cobertura nacional"
    ]
  },
  {
    titulo: "TRASLADO SIN RODAR",
    subtitulo: "Transportamos tu vehículo sin desgaste.",
    descripcion: "Transporte de unidades sobre plataformas o remolques de nuestra compañía, incluyendo motos, autos y cualquier unidad automotora que quepa en nuestras plataformas.",
    imagen: "/images/servicio-sin-rodar.png",
    beneficios: [
      "Ideal para vehículos inoperables o de colección",
      "Reduce el desgaste y kilometraje",
      "Transporte seguro y protegido",
      "Variedad de plataformas disponibles"
    ]
  },
  {
    titulo: "ARRASTRE (GRÚA)",
    subtitulo: "Soluciones para vehículos pesados.",
    descripcion: "Servicio de grúa para unidades pesadas como autobuses y tractocamiones, con entrega en el destino pactado.",
    imagen: "/images/servicio-grua.png",
    beneficios: [
      "Equipos especializados para vehículos pesados",
      "Personal altamente capacitado",
      "Servicio de emergencia disponible",
      "Manejo cuidadoso de la carga"
    ]
  }
];
---

<Layout title="Traslados - Traslados Valencia">
  <Header />
  
  <main class="flex-grow">
    <div class="container-fixed mx-auto py-8">
      <h1 class="text-4xl font-bold text-[var(--azul-trasval)] mb-4 text-left">Servicios de Traslados</h1>
      <div class="w-full h-1 bg-[var(--azul-trasval)] mb-8"></div>
      
      {servicios.map((servicio, index) => (
        <div class={`flex flex-col md:flex-row items-center bg-white rounded-lg overflow-hidden shadow-lg mb-8 ${index % 2 !== 0 ? 'md:flex-row-reverse' : ''}`}>
          <div class="md:w-1/2 p-8">
            <h2 class="text-2xl font-bold text-[var(--azul-trasval)] mb-2">{servicio.titulo}</h2>
            <h3 class="text-xl text-[var(--cielo-trasval)] mb-4">{servicio.subtitulo}</h3>
            <p class="text-gray-700 mb-4">{servicio.descripcion}</p>
            <ul class="list-disc list-inside text-gray-700">
              {servicio.beneficios.map((beneficio) => (
                <li>{beneficio}</li>
              ))}
            </ul>
          </div>
          <div class="md:w-1/2 h-64 md:h-auto relative">
            <img
              src={servicio.imagen}
              alt={`Servicio de ${servicio.titulo}`}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      ))}
    </div>
  </main>

  <Footer />
</Layout>

<style>
  :root {
    --azul-trasval: #00438E;
    --cielo-trasval: #007DB8;
  }
  .container-fixed {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }
</style>