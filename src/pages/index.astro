---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LogoCarousel from '../components/LogoCarousel.astro';
import Certificaciones from '../components/Certificaciones.astro';
---

<Layout title="Traslados Valencia">
  <Header />
  <main>
    <section class="parallax">
      <div 
        class="parallax-bg" 
        style="background-image: url('/images/img01.png');"
      ></div>
      <div class="parallax-content">
        <div class="container-fixed mx-auto">
          <div class="text-center text-white px-4 max-w-4xl mx-auto parallax-text">
            <h1 class="text-3xl md:text-5xl font-bold mb-4 leading-tight">
              Tu aliado para el traslado seguro y eficiente de vehículos pesados en México.
            </h1>
            <p class="text-xl md:text-2xl mb-8">
              Ofrecemos servicios de transporte confiables y de alta calidad para camiones, tractores y más.
            </p>
          </div>
        </div>
      </div>
    </section>

    <LogoCarousel />

    <div class="container-fixed mx-auto">
      <section class="py-12 bg-white">
        <h2 class="text-3xl font-bold mb-4 text-left text-azul-trasval">Servicios</h2>
        <p class="text-left text-lg mb-8">
          Contamos con un servicio integral a lo largo y ancho de la república mexicana.
        </p>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="service-card">
            <img
              src="/images/Servicios Traslados.png"
              alt="Servicio de Traslados"
              class="w-full h-full object-cover"
            />
            <div class="service-card-content">
              <h3 class="text-2xl font-bold mb-4">TRASLADOS</h3>
              <a href="/traslados" class="bg-transparent text-white border-white border-2 px-4 py-2 rounded hover:bg-white hover:text-azul-trasval transition-colors duration-300">
                Ver más
              </a>
            </div>
          </div>
          <div class="service-card">
            <img
              src="/images/Servicios Resguardo.png"
              alt="Servicio de Resguardo"
              class="w-full h-full object-cover"
            />
            <div class="service-card-content">
              <h3 class="text-2xl font-bold mb-4">RESGUARDO</h3>
              <a href="/resguardo" class="bg-transparent text-white border-white border-2 px-4 py-2 rounded hover:bg-white hover:text-azul-trasval transition-colors duration-300">
                Ver más
              </a>
            </div>
          </div>
          <div class="service-card">
            <img
              src="/images/Servicios Carga.png"
              alt="Servicio de Carga"
              class="w-full h-full object-cover"
            />
            <div class="service-card-content">
              <h3 class="text-2xl font-bold mb-4">CARGA</h3>
              <a href="/carga" class="bg-transparent text-white border-white border-2 px-4 py-2 rounded hover:bg-white hover:text-azul-trasval transition-colors duration-300">
                Ver más
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>

    <Certificaciones />
  </main>
  <Footer />
</Layout>

<style>
  .parallax {
    position: relative;
    overflow: hidden;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .parallax-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 120%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    z-index: -1;
  }
  .parallax-content {
    position: relative;
    z-index: 1;
    width: 100%;
  }
  .parallax-text {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }
  .service-card {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    height: 300px;
  }
  .service-card-content {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    background-color: rgba(0, 0, 0, 0.4);
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const parallaxBg = document.querySelector('.parallax-bg') as HTMLElement;
    
    window.addEventListener('scroll', () => {
      const scrollPosition = window.scrollY;
      if (parallaxBg) {
        parallaxBg.style.transform = `translateY(${scrollPosition * 0.5}px)`;
      }
    });
  });
</script>